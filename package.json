{
  "private": true,
  "name": "basic-monorepo",
  "packageManager": "pnpm@8.1.0",
  "scripts": {
    "lint": "turbo lint",
    "check:types": "turbo check:types && echo ",
    "test": "turbo test",
    "build": "turbo build",
    "dev": "turbo dev",
    "start-prepare": "chmod +x ./node_modules/.bin/husky && husky install && chmod +x ./node_modules/.bin/cross-env"
  },
  "devDependencies": {
    "@configs/eslint-config": "*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "turbo": "^1.9.8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    },
    "packageExtensions": {},
    "overrides": {
      "uuid": "^3.4.0"
    }
  },
  "eslintConfig": {
    "extends": "@configs/eslint-config",
    "ignorePatterns": [
      "node_modules",
      ".next",
      "public"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSameLine": true
  },
  "lint-staged": {
    "*.{ts,tsx,mjs,js,mts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{ts,tsx,mts}": [
      "pnpm lint --",
      "pnpm check:types"
    ],
    "*.{md,css}": [
      "prettier --write"
    ]
  }
}
